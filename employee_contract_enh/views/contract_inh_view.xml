<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_inherited_view_form" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherited</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary']" position="after">
                <group string="Index contract">
                    <field name="next_date_increase_salary"/>
                    <field name="percentage_index" widget="percentage"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>