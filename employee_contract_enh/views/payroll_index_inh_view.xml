<odoo>
    <data>
        <record id="hr_payroll_index_inherited_form_view" model="ir.ui.view">
            <field name="name">hr.payroll.index.inherited.form.view</field>
            <field name="model">hr.payroll.index</field>
            <field name="inherit_id" ref="hr_payroll.hr_payroll_index_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='percentage']" position="after">
                    <field name="next_date_increase_salary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>