<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="point_of_sale.report_saledetails">
        <t t-set="company" t-value="env.company"/>
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <div class="text-center">
                        <h2>POS Order Report</h2>
                        <strong>Analysis from <t t-esc="date_start" t-options="{'widget': 'datetime'}"/> to <t t-esc="date_stop" t-options="{'widget': 'datetime'}"/></strong>
                    </div>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>مبيعات</th>
                                <th>مردودات</th>
                                <th>صافي المبيعات</th>
                                <th>ضريبة مبيعات</th>
                                <th>ضريبة مردودات</th>
                                <th>صافي الضريبة</th>
                                <th>النقدية</th>
                                <th>ماستر كارد</th>
                                <th>الاجمالي</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
