<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="point_of_sale_report_saledetails_new">
        <t t-set="company" t-value="env.company"/>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.internal_layout">
                    <div class="page">
                        <div class="text-center">
                            <h2>POS Order Report</h2>
                            <strong>Analysis from <span t-field="o.start_date" t-options="{'widget': 'datetime'}"/> to <span t-field="o.end_date" t-options="{'widget': 'datetime'}"/></strong>
                        </div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>مبيعات</th>
                                    <th>مردودات</th>
                                    <th>صافي المبيعات</th>
                                    <th>ضريبة مبيعات</th>
                                    <th>ضريبة مردودات</th>
                                    <th>صافي الضريبة</th>
                                    <th>النقدية</th>
                                    <th>ماستر كارد</th>
                                    <th>الاجمالي</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach='o.get_resultat_pos_order_details()' t-as='res'>
                                    <td><t t-esc="res['customer']" /></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                    <td><t t-esc="res['cash_payment']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td><t t-esc="res['master_cart_payment']" t-options='{"widget": "float", "precision": 2}'/></td>
                                    <td><t t-esc="res['total']" t-options='{"widget": "float", "precision": 2}'/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
