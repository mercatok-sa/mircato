<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="promotion_email_template" model="mail.template">
            <field name="name">Promotion e-mail template</field>
            <field name="email_from">${object.company_id and object.company_id.email or ''}</field>
            <field name="subject">Promotion ${object.employee_id.name}</field>
            <field name="email_to">${object.employee_id.work_email|safe}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="employee_promotion.model_hr_promotion"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[<p>Dear All</p>]]></field>
        </record>

        <record id="action_promotion_mail" model="ir.actions.act_window">
            <field name="name">promotion Mail</field>
            <field name="res_model">mail.compose.message</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="context" eval="{'default_composition_mode': 'mass_mail','default_use_template': True,'default_template_id': ref('employee_promotion.promotion_email_template'),'default_email_to':'{($object.employee_id.work_email or \'\')|safe}'}"/>
            <field name="binding_model_id" ref="model_hr_promotion"/>
            <field name="binding_view_types">form</field>
        </record>
        <record id="promotion_email_template" model="mail.template">
            <field name="ref_ir_act_window" ref="employee_promotion.action_promotion_mail"/>
        </record>

        <record model="ir.ui.view" id="email_compose_onboarding_sample_invoice_promotion">
            <field name="name">mail.compose.message.form.account_invoice_onboarding_sample_invoice
            </field>
            <field name="model">mail.compose.message</field>
            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='subject']" position="after">
                    <field name="promotion_id"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>