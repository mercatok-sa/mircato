<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_loan_filter" model="ir.ui.view">
        <field name="name">employee.loan.select</field>
        <field name="model">employee.loan</field>
        <field name="arch" type="xml">
            <search string="Search Employee Loan">
                <field name="employee_id" operator="child_of"/>
                <field name="user_id"/>
                <field name="name" string="Loan" filter_domain="[('name','ilike',self)]"/>
                <filter name='draft' string="Draft" domain="[('state','=','draft')]" help="Draft Loan"/>
                <filter name='done' string="Done" domain="[('state','=','done')]" help="Done Loan"/>
                <filter name='paid' string="Paid" domain="[('state','=','paid')]" help="Paid Loan"/>
                <filter name='hr_approval' string="HR Approval" domain="[('state','=','hr_approval')]"/>
                <field name="loan_type_id"/>
                <group expand="0" string="Group By">
                    <filter string="Employees" name="employee_id" context="{'group_by':'employee_id'}"/>
                    <filter string="Manager" name="manager_id" context="{'group_by':'manager_id'}"/>
                    <filter string="Loan type" name="type" context="{'group_by':'loan_type_id'}"/>
                    <filter string="States" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_employee_loan_form" model="ir.ui.view">
        <field name="name">view.employee.loan.form</field>
        <field name="model">employee.loan</field>
        <field name="arch" type="xml">
            <form string="Employee Loan">
                <header>
                    <button name="compute_installment" invisible="state != 'draft'" string="Compute Installment"
                            class="btn-primary" type="object" groups="base.group_user"/>

                    <button name="action_send_request" invisible="state != 'draft'" string="Submit Request"
                            class="btn-primary" type="object" groups="base.group_user"/>

                    <field name="is_dm" invisible="1"/>
                    <button name="dep_manager_approval_loan" string="Approve Request" class="btn-primary"
                            invisible="is_dm == False or state != 'request'" type="object"/>

                    <button name='%(dev_hr_loan.action_reject_loan_reason)d' string="Reject Request" class="btn-primary"
                            type="action" invisible="is_dm == False or state != 'request'"/>

                    <button name="cancel_loan" invisible="state != 'request'" string="Cancel" type="object"
                            groups="base.group_user"/>

                    <button name="hr_manager_approval_loan" invisible="state != 'dep_approval'" string="Confirm"
                            class="btn-primary"
                            type="object" groups="hr.group_hr_manager"/>

                    <button name="%(dev_hr_loan.action_reject_loan_reason)d" invisible="state != 'dep_approval'"
                            string="Reject" class="btn-primary" type="action" groups="hr.group_hr_manager"/>

                    <button name="paid_loan" invisible="state != 'hr_approval'" string="Paid Loan"
                            class="btn-primary" type="object" groups="hr.group_hr_manager"/>

                    <button name="set_to_draft" invisible="state not in ('cancel','reject')" string="Set to Draft"
                            class="btn-primary" type="object" groups="base.group_user"/>

                    <button name="action_close_loan" string="Close Loan" class="btn-primary" type="object"
                            groups="hr.group_hr_manager" invisible="is_close != True"/>

                    <button name="action_done_loan" invisible="state != 'paid'" string="Done" class="btn-primary"
                            type="object" groups="hr.group_hr_manager"/>

                    <button name="button_hold" invisible="state != 'done' or hold != False"
                            string="Hold" class="btn-primary" type="object" groups="hr.group_hr_manager"/>

                    <button name="button_un_hold" invisible="state != 'done' or hold != True"
                            string="Un Hold" class="btn-primary" type="object"
                            groups="hr.group_hr_manager"/>

                    <button name='send_loan_detail' invisible="state != 'done'" string='Send Mail' class="btn-primary"
                            type="object" groups="hr.group_hr_user"/>

                    <field name="is_closed" invisible="1"/>

                    <button name='loan_closure_wizard'
                            invisible="is_closed != False or state != 'done'"
                            string='Loan Closure' class="btn-primary" type="object" groups="hr.group_hr_user"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,request,dep_approval,hr_approval,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <b>
                            <button name="view_journal_entry" type="object" class="oe_stat_button"
                                    icon="fa-external-link" string="Journal Entry" groups="hr.group_hr_manager"
                                    invisible="state not in ('done','paid')"/>
                        </b>
                        <button type="object"
                                name="action_view_loan_installment"
                                class="oe_stat_button"
                                icon="fa-list"
                                invisible="installment_count == 0">
                            <field name="installment_count" string="Installment" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" icon="fa-list-alt"
                                type="object" invisible="payment_id == False"
                                name="view_payments">
                            <div class="o_stat_info">
                                Cash
                            </div>
                        </button>
                    </div>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="department_id" readonly="state != 'draft'"/>
                            <field name="manager_id" readonly="state != 'draft'"/>
                            <field name="hold" invisible="1"/>
                            <field name="payment_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="1"/>
                            <field name="job_id" readonly="state != 'draft'"/>
                            <field name="company_id" readonly="1"/>
                            <field name="loan_url" invisible="1"/>
                            <field name="user_id" readonly="1"/>
                            <field name="hr_manager_id" invisible="1"/>
                            <field name="is_close" invisible="1"/>
                            <field name="move_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="is_apply_interest" invisible="1"/>
                            <field name="payment_method" readonly="state != 'draft'"/>
                            <field name="loan_amount" readonly="state != 'draft'"/>
                            <field name="interest_amount" invisible="1"/>
                            <field name="extra_in_amount" invisible="is_apply_interest != True"/>
                            <field name="paid_amount"/>
                            <field name="remaing_amount"/>
                        </group>
                        <group>
                            <field name="loan_type_id" readonly="state != 'draft'"/>
                            <field name="start_date" readonly="state != 'draft'"/>
                            <field name="term" readonly="state != 'draft'"/>
                            <field name="end_date"/>
                            <field name="interest_rate" invisible="1"/>
                            <field name="interest_type" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="installment_amount"/>
                        </group>
                        <group>

                        </group>
                    </group>

                    <notebook>
                        <page string="Reason">
                            <br/>
                            <field name="notes" readonly="state != 'draft'"/>
                        </page>
                        <page string="Installment">
                            <br/>
                            <field name="installment_lines" readonly="1">
                                <tree string="Installment" decoration-success="is_paid == True"
                                      decoration-muted="is_skip == True">
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="amount" sum="amount"/>
                                    <field name="interest" sum="interest" invisible="1"/>
                                    <field name="installment_amt" sum="installment_amt"/>
                                    <field name="ins_interest" sum="ins_interest" invisible="1"/>
                                    <field name="total_installment" sum="total_installment"/>
                                    <field name="is_paid" invisible="1"/>
                                    <field name="is_skip" invisible="1"/>
                                    <button type="object" name="action_view_payslip" string="Payslip"
                                            class="btn-primary"
                                            readonly="is_paid == False"
                                            groups="hr_payroll.group_hr_payroll_manager"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Document">
                            <field name="loan_document_line_ids" mode="kanban"
                                   context="{'default_loan_id': active_id,'default_employee_id':employee_id }">
                                <!--                               -->
                                <kanban>
                                    <field name="name"/>
                                    <field name="document"/>
                                    <field name="employee_id"/>
                                    <field name="date"/>
                                    <templates>

                                        <t t-name="kanban-box">
                                            <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                                                <div class="oe_kanban_details">

                                                    <strong>
                                                        <h3>
                                                            <field name="sequ_name"/>
                                                        </h3>
                                                    </strong>
                                                    <ul>
                                                        <li>
                                                            <span style="color: #800000">Name :</span>
                                                            <field name="name"/>
                                                        </li>
                                                        <li>
                                                            <span style="color: #800000">Date:</span>
                                                            <field name="date"/>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>

                        </page>
                        <page string='Reject Reason' invisible="state != 'reject'">
                            <br/>
                            <field name="reject_reason" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_view_all_loan" model="ir.actions.act_window">
        <field name="name">View Loan</field>
        <field name="res_model">employee.loan</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain"></field>
        <field name="context">{
            'search_default_loan_type_id': [active_id],
            'default_loan_type_id': active_id,
            }
        </field>
        <field name="search_view_id" ref="view_employee_loan_filter"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a new Loan.
            </p>
        </field>
    </record>

