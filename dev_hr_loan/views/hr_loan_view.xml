    <record id="view_employee_loan_tree" model="ir.ui.view">
        <field name="name">view.employee.loan.tree</field>
        <field name="model">employee.loan</field>
        <field name="arch" type="xml">
            <tree string="Employee Loan">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_employee_loan">
        <field name="name">Employee Loan</field>
        <field name="res_model">employee.loan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_loans':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to define a new loan.
            </p>
        </field>
    </record>

    <menuitem id="menu_main_employee_loan_main" name="Employee Loan" sequence="75"/>
    <menuitem id="menu_main_employee_loan_sub" parent="menu_main_employee_loan_main" name="Employee Loan" sequence="2"/>
    <menuitem name="Employee Loan" id="menu_employee_loan" parent="menu_main_employee_loan_sub"
              action="action_employee_loan"/>

    <menuitem id="menu_main_employee_loan_report" parent="menu_main_employee_loan_main" name="Reporting" sequence="4"
