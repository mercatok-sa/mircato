<odoo>
    <record id="view_dev_skip_installment_form" model="ir.ui.view">
        <field name="name">view.dev.skip.installment.form</field>
        <field name="model">dev.skip.installment</field>
        <field name="arch" type="xml">
            <form string="Skip Instalment">
                <header>
                    <button name="action_send_request" string="Submit Request" invisible="state != 'draft'"
                            class="btn-primary" type="object" groups="base.group_user"/>
                    <field name="is_dm" invisible="1"/>
                    <button name="approve_skip_installment" string="Approve" class="btn-primary"
                            invisible="is_dm == False or state != 'request'" type="object"/>

                    <button name="hr_manger_approve" string="Hr Manger Approve" class="btn-primary"
                            invisible="state != 'approve'" type="object" groups="hr.group_hr_manager"/>

                    <button name="%(dev_hr_loan.action_reject_skip_installment_reason)d" string="Reject"
                            class="btn-primary" invisible="is_dm == False or state != 'request'" type="action"/>

                    <button name="cancel_skip_installment" invisible="state != 'request'" string="Cancel" type="object"
                            groups="base.group_user"/>

                    <button name="confirm_skip_installment" invisible="state != 'hr_manager_approve'" string="Confirm"
                            class="btn-primary" type="object" groups="hr.group_hr_manager"/>

                    <button name="%(dev_hr_loan.action_reject_skip_installment_reason)d" invisible="state != 'approve'"
                            string="Reject" class="btn-primary" type="action" groups="hr.group_hr_manager"/>

                    <button name="done_skip_installment" invisible="state != 'confirm'" string="Done"
                            class="btn-primary"
                            type="object" groups="hr.group_hr_manager"/>

                    <button name="set_to_draft" invisible="state not in ('cancel', 'reject')"
                            string="Set to Draft" class="btn-primary" type="object" groups="base.group_user"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,approve,confirm,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <b>
                            <button name="view_journal_entry" type="object" class="oe_stat_button"
                                    icon="fa-external-link" string="Journal Entry" groups="hr.group_hr_manager"
                                    invisible="state != 'done'"/>
                        </b>
                        <b>
                            <button name="view_journal_entry" type="object" class="oe_stat_button"
                                    icon="fa-external-link" string="Journal Entry" groups="hr.group_hr_manager"
                                    invisible="state != 'done'"/>
                        </b>
                    </div>
                    <label for="name" class="oe_edit_only"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="loan_id" domain="[('employee_id','=',employee_id),('state','=','done')]"
                                   widget="selection" readonly="state != 'draft'"/>
                            <field name="installment_id"
                                   domain="[('loan_id','=',loan_id),('is_paid','!=',True),('is_skip','!=',True),('is_cancelled','!=',True)]"
                                   widget="selection" readonly="state != 'draft'"/>
                            <field name="method" readonly="state != 'draft'" required="1"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="manager_id" readonly="state != 'draft'"/>
                            <field name="skip_installment_url" invisible="1"/>
                            <field name="user_id" invisible="1"/>
                            <field name="company_id" readonly="1"/>
                            <field name="move_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Reason">
                            <br/>
                            <field name="notes" readonly="state != 'draft'"/>
                        </page>
                        <page string='Reject Reason' readonly="state != 'draft'">
                            <br/>
                            <field name="reject_reason" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_dev_skip_installment_tree" model="ir.ui.view">
        <field name="name">view.dev.skip.installment.tree</field>
        <field name="model">dev.skip.installment</field>
        <field name="arch" type="xml">
            <tree string="Skip Instalment">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="loan_id"/>
                <field name="installment_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_dev_skip_installment_filter" model="ir.ui.view">
        <field name="name">skip.installment.filter</field>
        <field name="model">dev.skip.installment</field>
        <field name="arch" type="xml">
            <search string="Search Skip Instalment">
                <field name="employee_id" operator="child_of"/>
                <field name="user_id"/>
                <field name="name" string="Skip Instalment" filter_domain="[('name','ilike',self)]"/>
                <filter name="state" string="Draft" domain="[('state','=','draft')]" help="Draft Loan"/>
                <filter name="state" string="Done" domain="[('state','=','done')]" help="Done Loan"/>
                <field name="employee_id"/>
                <group expand="0" string="Group By">
                    <filter string="Employees" name="employee_id" context="{'group_by':'employee_id'}"/>
                    <filter string="Loans" name="loan_id" context="{'group_by':'loan_id'}"/>
                    <filter string="States" name="state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_dev_skip_installment">
        <field name="name">Skip Instalment</field>
        <field name="res_model">dev.skip.installment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_loans':1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to define a new Skip Installment.
            </p>
        </field>
    </record>

    <menuitem id="menu_main_skip_installment" parent="menu_main_employee_loan_main" name="Skip Instalment" sequence="3"/>
    <menuitem name="Skip Instalment" id="menu_skip_installment" parent="menu_main_skip_installment"
              action="action_dev_skip_installment"/>

</odoo>
