<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_employee_loan_type_form" model="ir.ui.view">
        <field name="name">view.employee.loan.type.form</field>
        <field name="model">employee.loan.type</field>
        <field name="arch" type="xml">
            <form string="Employee Loan Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="loan_limit"/>
                            <field name="loan_term"/>
                        </group>
                        <group>
                            <field name="loan_account"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="interest_account" invisible="1"/>
                        </group>
                        <group>
                            <field name="is_apply_interest" invisible="1"/>
                            <field name="interest_rate" invisible="1"/>
                            <field name="interest_type" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_employee_loan_type_tree" model="ir.ui.view">
        <field name="name">view.employee.loan.ty[e.tree</field>
        <field name="model">employee.loan.type</field>
        <field name="arch" type="xml">
            <tree string="Employee Loan Type">
                <field name="name"/>
                <field name="loan_limit"/>
                <field name="loan_term"/>
                <field name="interest_rate" invisible="1"/>
                <field name="interest_type" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_setting" model="ir.actions.act_window">
        <field name="name">Loan Type</field>
        <field name="res_model">employee.loan.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain"></field>
        <field name="context">{
            'search_default_id': [active_id],
            'default_id': active_id,
            }
        </field>
        <field name="search_view_id" ref="view_employee_loan_type_form"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click here to create a new Loan.
            </p>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_employee_loan_type">
        <field name="name">Employee Loan Type</field>
        <field name="res_model">employee.loan.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="Loan Type" id="menu_employee_loan_type" parent="menu_main_employee_loan_config"
              action="action_employee_loan_type"
              groups="hr.group_hr_user" sequence="1"/>

</odoo>
