<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_loan_closure_wizard_form" model="ir.ui.view">
            <field name="name">view.loan.closure.wizard.form</field>
            <field name="model">loan.closure.wizard</field>
            <field name="arch" type="xml">
                <form string="Loan Closure">
                    <group>
                        <field name="type" required="1"/>
                        <field name="date"
                               invisible="type != 'payslip'" required="type == 'payslip'"/>
                        <field name="journal_id"
                               domain="[('type','=',['cash','bank'])]"
                               invisible="type != 'cash'" required="type == 'cash'"/>
                    </group>
                    <footer>
                        <button class="oe_highlight" name="confirm_loan_closure" string="Confirm" type="object"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>