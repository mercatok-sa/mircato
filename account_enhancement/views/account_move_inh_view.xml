<odoo>
    <data>
        <record id="view_account_move_form_inherited" model="ir.ui.view">
            <field name="name">account.move.form.view.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="change_analytic_distribution" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution']"
                       position="attributes">
                    <attribute name="required">parent.change_analytic_distribution == False</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>