<odoo>
    <record id="bonus_type_form_view" model="ir.ui.view">
        <field name="name">bonus.type.form.view</field>
        <field name="model">bonus.type</field>
        <field name="arch" type="xml">
            <form string="Bonus Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="type"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bonus_type_tree_view" model="ir.ui.view">
        <field name="name">bonus.type.tree.view</field>
        <field name="model">bonus.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record id="bonus_type_search_view" model="ir.ui.view">
        <field name="name">bonus.type.search.view</field>
        <field name="model">bonus.type</field>
        <field name="arch" type="xml">
            <search string="Bonus Type">
                <field name="name"/>
                <field name="type"/>
                <group expand="0" string="Group By">
                    <filter name="type" string="Bonus Type" domain="[]" context="{'group_by':'type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="bonus_type_action" model="ir.actions.act_window">
        <field name="name">Bonus Type</field>
        <field name="res_model">bonus.type</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" ref="bonus_type_tree_view"/>
    </record>

    <menuitem id="menu_employee_bonus" name="Employee Bonus" parent="hr.menu_hr_root" sequence="30"/>

    <menuitem id="bonus_type_menu" parent="menu_employee_bonus" action="bonus_type_action" sequence="2"/>

</odoo>
