    <template id="portal_my_payslips" name="My Payslips">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Payslips</t>
            </t>
            <t t-if="not payslips">
                <p>There are currently no payslip for your account.</p>
            </t>
            <t t-if="payslips" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='d-none d-md-inline'>Payslip Name #</span>
                            <span class='d-block d-md-none'>Ref.</span>
                        </th>
                        <th class="text-right">Date</th>
                        <th class="text-center">Status</th>
                        <th class="text-right">Net Salary</th>
                    </tr>
                </thead>
                <t t-foreach="payslips" t-as="pay">
                    <tr>
                        <td>
                            <!--                            <a t-attf-href="/my/payslips/#{pay.id}">-->
                            <t t-esc="pay.name"/>
                            <!--                            </a>-->
                        </td>
                        <td class="text-right">
                            <span t-field="pay.date_from" t-options="{'widget': 'date'}"/>&amp;nbsp;
                        </td>
                        <td class="text-center">
                            <span t-if="pay.state == 'done'">
                                <!--                                 class="badge badge-pill badge-success"-->
                                <i class="fa fa-fw fa-check" role="img" aria-label="Done" title="Done"/>Done
                            </span>
                        </td>
                        <td class="text-right">
                            <t t-foreach="pay.line_ids" t-as="line">
                                <t t-if="line.code == 'NET'">
                                    <span t-field="line.amount"/>
                                </t>
                            </t>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>
