<odoo>

    <!-- Breadcrumbs of attendance -->
    <template id="portal_attendance_menu" name="Portal layout : Attendance menu entry"
              inherit_id="portal.portal_breadcrumbs" priority="25">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'attendances_sheets' or attendances_sheets"
                t-attf-class="breadcrumb-item #{'active ' if not attendances_sheets else ''}">
                <a t-attf-href="/my/attendances_sheets?{{ keep_query() }}">
                    Attendance Sheet
                </a>
            </li>
        </xpath>
    </template>

    <!-- My attendance menu in Main portal document page -->
    <template id="portal_my_attendance" name="Portal My Attendance : Attendance entries"
              inherit_id="portal.portal_my_home" priority="101">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">My Attendance Sheet</t>
                <t t-set="text">Display your Attendance Sheet</t>
                <t t-set="url" t-value="'/my/attendances_sheets'"/>
                <t t-set="config_card" t-value="True"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_attendances" name="My Attendance">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-call="portal.portal_docs_entry">
                    <t t-set="title">Attendance</t>
                    <t t-set="url" t-value="'/my/attendances_sheets'"/>
                </t>
            </t>
            <t t-if="not attendances">
                <p>There are currently no attendance for your account.</p>
            </t>
            <t t-if="attendances" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>
                            <span class='text-center'>Employee Name</span>
                        </th>
                        <th class="text-center">Check In</th>
                        <th class="text-center">Check Out</th>
                        <th class="text-center">Worked Hours</th>
                    </tr>
                </thead>
                <t t-foreach="attendances" t-as="att">
                    <tr>
                        <td>
                            <span t-field="att.employee_id.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="att.check_in" t-options="{'widget': 'date'}"/>&amp;nbsp;
                        </td>
                        <td class="text-center">
                            <span t-field="att.check_out" t-options="{'widget': 'date'}"/>&amp;nbsp;
                        </td>
                        <td class="text-center">
                            <span t-field="att.worked_hours"/>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="portal_my_attendances_sheets" name="My Attendance Sheet">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Attendance Sheets</t>
            </t>
            <t t-if="not attendances_sheets">
                <p>There are currently no attendance sheet for your account.</p>
            </t>
            <t t-if="attendances_sheets" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th class="text-center">Attendance Sheet Name</th>
                        <th class='text-center'>Employee Name</th>
                        <th class="text-center">Department</th>
                        <th class="text-center">Contract</th>
                        <th class="text-center">Attendance Policy</th>
                        <th class="text-center">Date From</th>
                        <th class="text-center">Date To</th>
                    </tr>
                </thead>
                <t t-foreach="attendances_sheets" t-as="att">
                    <tr>
                        <td class="text-center">
                            <span t-field="att.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="att.employee_id.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="att.department_id.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="att.contract_id.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="att.att_policy_id.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="att.date_from" t-options="{'widget': 'date'}"/>&amp;nbsp;
                        </td>
                        <td class="text-center">
                            <span t-field="att.date_to" t-options="{'widget': 'date'}"/>&amp;nbsp;
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>
</odoo>