<odoo>
    <record id="leave_delegation_send_mail" model="mail.template">
        <field name="name">Leave Delegation</field>
        <field name="email_from">${object.company_id.email}</field>
        <field name="subject">Delegation for ${object.employee_id.name or object.employee_ids}</field>
        <field name="email_to">${object.delegation_id.work_email}</field>
        <field name="model_id" ref="model_hr_leave"/>
        <field name="auto_delete" eval="True"/>
        <field name="body_html"><![CDATA[
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 14px; color: rgb(34, 34, 34); background-color: #FFF;">
               	<p>Dear <b>${object.delegation_id.name}</b>,</p>
               	<p>There is delegation leave <b>${object.name}</b> for <b>${object.employee_id.name}</b> From <b>${object.date_from}</b> To <b>${object.date_to}</b>.</p>
           </div>

            ]]></field>
    </record>
</odoo>