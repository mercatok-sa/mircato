<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_contract_inherited_view_form" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherited</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary']" position="after">
                <group name="salary_in_work">
                    <label for="salary_in_work"/>
                    <div class="o_row" name="salary_in_work_f">
                        <field name="salary_in_work" nolabel="1"/>
                        <span>/ month</span>
                    </div>
                </group>
            </xpath>
            <xpath expr="//field[@name='date_end']" position="after">
                <field name="probation_period"/>
                <field name="probation_date_end"/>
            </xpath>
        </field>
    </record>

    <record id="hr_contract_history_inherited_view_form" model="ir.ui.view">
        <field name="name">hr.contract.history.view.form.inherited</field>
        <field name="model">hr.contract.history</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_history_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_hired']" position="after">
                <field name="probation_date_end"/>
            </xpath>
        </field>
    </record>
</odoo>