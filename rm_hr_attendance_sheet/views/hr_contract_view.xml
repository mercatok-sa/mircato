<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_contract_form" model="ir.ui.view">
        <field name="name">hr.contract.view</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_payroll.hr_contract_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='structure_type_id']" position="after">
                <field name="att_policy_id" required="1"/>
            </xpath>
        </field>
    </record>

    <record id="resource_calendar_inherited_form" model="ir.ui.view">
        <field name="name">resource.calendar.inherited.view</field>
        <field name="model">resource.calendar</field>
        <field name="inherit_id" ref="resource.resource_calendar_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tz']" position="after">
                <field name="total_worked_hours" required="1"/>
            </xpath>
        </field>
    </record>

</odoo>


