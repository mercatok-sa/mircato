<odoo>
    <data>
        <record id="purchase_order_extended_form" model="ir.ui.view">
            <field name="name">purchase.order.form.extended.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="replace">
                    <field name="partner_id" widget="res_partner_many2one"
                           context="{'res_partner_search_mode': 'supplier', 'show_vat': True}"
                           placeholder="Name, TIN, Email, or Reference" domain="[('supplier_rank','&gt;', 0)]"
                           readonly="state in ['cancel', 'done', 'purchase']"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>