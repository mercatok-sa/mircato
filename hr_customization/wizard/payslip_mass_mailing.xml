<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_payslip_mass_mailing" model="ir.ui.view">
            <field name="name">Payslip Mass Mailing</field>
            <field name="model">payslip.mass.mailing</field>
            <field name="arch" type="xml">
                <form string="Payslip Mass Mailing">
                    <sheet>
                        <group>
                            <separator string="Are you sure to send these Payslips?" colspan="4"/>
                        </group>
                        <footer>
                            <button name="payslip_mass_mailing" string="Send Mail" type="object" class="oe_highlight"/>
                            or
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.server" id="payslip_mass_mailing_action">
            <field name="name">Payslip Mass Mailing</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_view_types">list</field>
            <field name="state">code</field>
            <field name="code">
                action = records.payslip_mass_mailing()
            </field>
        </record>

    </data>
</odoo>

