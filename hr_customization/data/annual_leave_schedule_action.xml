<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="hr_structure_002" model="hr.payroll.structure">
            <field name="name">Regular Pay</field>
            <field name="type_id">1</field>
            <field name="unpaid_work_entry_type_ids"
                   eval="[(4, ref('hr_work_entry_contract.work_entry_type_unpaid_leave'))]"/>
            <field name="country_id" eval="False"/>
        </record>

        <record forcecreate="True" id="annual_leave_action" model="ir.cron">
            <field name="name">Calculate Annual Leave Per Day</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.get_employee_annual_leave()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>


        <record forcecreate="True" id="termination_and_resignation_action" model="ir.cron">
            <field name="name">Termination And Resignation</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.get_employee_termination_and_resignation_amount()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

        <record id="salary_rule_sick_leave_allowance" model="hr.salary.rule">
            <field name="name">Sick Leave</field>
            <field name="sequence">110</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = - (payslip.total_sick_leave_amount)</field>
            <field name="code">Sick</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="struct_id" ref="hr_customization.hr_structure_002"/>
        </record>

        <record id="salary_rule_annual_leave_allowance" model="hr.salary.rule">
            <field name="name">Annual Leave</field>
            <field name="sequence">111</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = (payslip.annual_leaves_count)</field>
            <field name="code">Annual</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="hr_customization.hr_structure_002"/>
        </record>

        <record id="entry_document1" model="employee.checklist">
            <field name="name">Education Certificate</field>
            <field name="document_type">entry</field>
        </record>
        <record id="entry_document2" model="employee.checklist">
            <field name="name">Salary Certificate</field>
            <field name="document_type">entry</field>
        </record>
        <record id="entry_document3" model="employee.checklist">
            <field name="name">Experience Certificate</field>
            <field name="document_type">entry</field>
        </record>
        <record id="exit_document1" model="employee.checklist">
            <field name="name">Experience Certificate</field>
            <field name="document_type">exit</field>
        </record>
        <record id="exit_document2" model="employee.checklist">
            <field name="name">Salary Certificate</field>
            <field name="document_type">exit</field>
        </record>

        <record id="hr_holidays.holiday_status_sl" model="hr.leave.type">
            <field name="sick_leave">True</field>
            <field name="sick_leave_rules_ids" eval="[(5, 0),
            (0, 0, {'name': 'Rule1','days_from': 0.0, 'days_to':15,'deduction': 0.0}),
            (0, 0, {'name': 'Rule2', 'days_from': 16, 'days_to': 25, 'deduction': 0.25}),
            (0, 0, {'name': 'Rule3', 'days_from': 26, 'days_to': 35, 'deduction': 0.50}),
            (0, 0, {'name': 'Rule4', 'days_from': 36, 'days_to': 45, 'deduction': 0.75}),
            (0, 0, {'name': 'Rule5', 'days_from': 46, 'days_to': 60, 'deduction': 1})]"/>

        </record>

        <record id="hr_holidays.holiday_status_cl" model="hr.leave.type">
            <field name="annual_leave">True</field>
        </record>

        <record id="mail_activity_type_alert_document_expiry_date" model="mail.activity.type">
            <field name="name">Document Expiry Date</field>
            <field name="category">default</field>
            <field name="res_model">hr.employee</field>
            <field name="icon">fa-tasks</field>
            <field name="delay_count">0</field>
        </record>

        <record id="hr_payslip_run_cron" model="ir.cron">
            <field name="name">Generate Payslip Batches &amp; Payslips</field>
            <field name="model_id" ref="model_hr_payslip_run"/>
            <field name="state">code</field>
            <field name="code">model._cron_generate_batches_generate_payslips()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>

        <record id="payslip_mail_template" model="mail.template">
            <field name="name">Payslip Email Template</field>
            <field name="email_from">${user.email|safe}</field>
            <field name="subject">${object.name}</field>
            <field name="email_to">${ctx['email_to']|safe}</field>
            <field name="reply_to">${user.email|safe}</field>
            <field name="model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${user.lang}</field>
<!--            <field name="report_template" ref="hr_payroll.action_report_payslip"/>-->
<!--            <field name="report_name">Salary Slip of ${object.employee_id.name}</field>-->
            <field name="body_html"><![CDATA[
<p>Hello ${object.employee_id.name},</p>
<p>Your Payslip for the period ${ctx['start_date'] | safe} to ${ctx['end_date'] | safe} is attached.</p>
]]></field>
        </record>

        <record id="hr_rule_allowance" model="hr.salary.rule">
            <field name="name">Allowance Rule</field>
            <field name="sequence" eval="6"/>
            <field name="code">Al</field>
            <field name="condition_select">none</field>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = contract.amount</field>
            <field name="category_id" ref="hr_payroll.ALW"/>
            <field name="struct_id" ref="hr_customization.hr_structure_002"/>
        </record>

        <record forcecreate="True" id="indemnity_liability_action" model="ir.cron">
            <field name="name">Indemnity Liability</field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.get_employee_indemnity_liability()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
        </record>

    </data>
</odoo>