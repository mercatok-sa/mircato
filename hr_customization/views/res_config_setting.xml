<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Employees" string="Employees" data-key="empl"
                         groups="hr.group_hr_manager">
                        <h2>Indemnity Entries</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box" title="SMS">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <div class="row">
                                            <label for="indemnity_liability_account_id" class="col-lg-3 o_light_label"/>
                                            <field name="indemnity_liability_account_id"
                                                   domain="[('account_type','=','liability_payable')]"/>
                                        </div>
                                        <div class="row">
                                            <label for="indemnity_expense_account_id" class="col-lg-3 o_light_label"/>
                                            <field name="indemnity_expense_account_id"
                                                   domain="[('account_type','=','expense')]"/>
                                        </div>
                                        <div class="row">
                                            <label for="journal_id" class="col-lg-3 o_light_label"/>
                                            <field name="journal_id"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</odoo>