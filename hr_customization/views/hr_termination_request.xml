<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="employee_termination_request_form_view" model="ir.ui.view">
            <field name="name">employee.termination.request.form.view</field>
            <field name="model">hr.termination.request</field>
            <field name="arch" type="xml">
                <form string="Employee Termination Request">
                    <header>
                        <button name="get_employee_termination" string="Confirm" type="object"
                                invisible="state != 'draft'" class="oe_highlight"/>
                        <button name="termination_cancel" string="Cancel" type="object" invisible="state != 'draft'"
                                class="oe_highlight"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,terminated"/>
                    </header>
                    <sheet>
                        <group colspan="4">
                            <field name="employee_id" readonly="state in ('terminated','canceled')"/>
                            <field name="rule_id"/>
                            <field name="last_date" readonly="state in ('terminated','canceled')"/>
                            <field name="number_of_year" readonly="1"/>
                            <field name="number_of_day" readonly="1"/>
                            <field name="percentage_value" string="Percentage Value (%)" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Termination Reason">
                                <field name="notes" readonly="state in ('terminated','canceled')"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="employee_termination_request_tree_view" model="ir.ui.view">
            <field name="name">employee.termination.request.tree.view</field>
            <field name="model">hr.termination.request</field>
            <field name="arch" type="xml">
                <tree string="Termination And Resignation Rules">
                    <field name="rule_id"/>
                    <field name="employee_id"/>
                </tree>
            </field>
        </record>

        <record id="employee_termination_request_action_view" model="ir.actions.act_window">
            <field name="name">Employee Termination Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.termination.request</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>