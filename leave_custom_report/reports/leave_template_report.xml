        <template id="report_template_leave_request">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="leave_custom_report.template_leave_request_document"
                       t-lang="o.env.lang"/>
                </t>
            </t>
        </template>

        <record id="action_template_leave_request_report" model="ir.actions.report">
            <field name="name">نموذج طلب إجازة</field>
            <field name="model">hr.leave</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">leave_custom_report.report_template_leave_request</field>
            <field name="report_file">leave_custom_report.report_template_leave_request</field>
            <field name="binding_model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="binding_type">report</field>
        </record>

        <record id="paperformat_template_leave_request_report" model="report.paperformat">
            <field name="name">Template Leave Request Paper Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">40</field>
            <field name="dpi">90</field>
        </record>


        <record id="leave_custom_report.action_template_leave_request_report" model="ir.actions.report">
            <field name="paperformat_id" ref="leave_custom_report.paperformat_template_leave_request_report"/>
        </record>
    </data>
</odoo>