<odoo>
    <data>
        <record id="penalty_rule_form_view" model="ir.ui.view">
            <field name="name">penalty.rule.form.view</field>
            <field name="model">penalty.rule</field>
            <field name="arch" type="xml">
                <form string="Penalty Rule">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="number_of_days"/>
                                <field name="penalty_type"/>
                            </group>
                        </group>
                        <group string="Penalty Times"/>
                        <field name="line_ids">
                            <tree editable="bottom">
                                <field name="counter"/>
                                <field name="rate"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="penalty_rule_tree_view" model="ir.ui.view">
            <field name="name">penalty.rule.tree.view</field>
            <field name="model">penalty.rule</field>
            <field name="arch" type="xml">
                <tree string="Penalty Rule">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_penalty_rule" model="ir.actions.act_window">
            <field name="name">Penalty Rules</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">penalty.rule</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new document
                </p>
            </field>
        </record>

        <menuitem id="menu_config_penalty_rule" name="Penalty"
                  parent="hr.menu_human_resources_configuration" sequence="100"/>

        <menuitem id="menu_penalty_rule" name="Penalty Rules"
                  parent="penalty_enhancement.menu_config_penalty_rule" action="action_penalty_rule" sequence="1"/>

    </data>
</odoo>